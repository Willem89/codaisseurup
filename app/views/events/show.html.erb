<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Location <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>

    <p>----------</p>

    <p>Starts at: <%= @event.starts_at%></p>
    <p>Ends at: <%= @event.ends_at%></p>

    <p>----------</p>
    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Capacity: <%= @event.capacity %></p>
    <p><%= @event.capacity %> <%= @event.capacity > 1 ? "Guests" : "Guest" %></p>

    <p>----------</p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <p>----------</p>

    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>TV</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Kitchen</del>").html_safe : "Drinks" %></li>
    </ul>

  </div>

  <h4>Categories</h4>
  <% @categories.each do |theme| %>
    <span class="label label-success"><%= category.name %></span>
  <% end %>

  <!-- Photos -->
  <h4>Photos</h4>
  <% @event.photos.each do |photo| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= image_tag photo.image.thumbnail %>
    </div>
  </div>
  <% end %>

<div>
<%= link_to "Back", events_path, class: "btn btn-default" %>
</div>
